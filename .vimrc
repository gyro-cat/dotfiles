syntax on
set nocompatible

set laststatus=2
set noerrorbells
set tabstop=4 softtabstop=4
set shiftwidth=4
set smartindent

set nu
set relativenumber
set ruler
set scrolloff=5

set nowrap
set sidescrolloff=5
set lz

set incsearch
set ignorecase
set hlsearch

set showcmd

set noswapfile
set undodir=~/.vim/undodir
set undofile

set splitbelow
set splitright

set pastetoggle=<F11>

set path+=**
set wildmenu

