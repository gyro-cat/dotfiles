Xcursor.theme: Adwaita

! remove keycap picture insert mode/ISO14755 mode
URxvt.iso14755: false
URxvt.iso14755_52: false

! scroll one line with shift-up, shift-down
URxvt.keysym.Control-Shift-Up: command:\033]720;1\007
URxvt.keysym.Control-Shift-Down: command:\033]721;1\007

! extensions
URxvt.perl-ext-common: default,matcher,url-select,keyboard-select

! matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5

! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true

! keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate

! font
URxvt.font: xft:Rec Mono Duotone:size=9

! hide mouse cursor while typing or after 1 second of inactivity
URxvt.pointerBlank : true
URxvt.pointerBlankDelay : 1

! scroll settings
URxvt.scrollBar : false
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true
URxvt.saveLines: 10000
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! colours

! special
*.foreground:   #b4b5b7
*.background:   #1c1e26
*.cursorColor:  #b4b5b7

! black
*.color0:       #1c1e26
*.color8:       #6f6f70

! red
*.color1:       #e95678
*.color9:       #e95678

! green
*.color2:       #29d398
*.color10:      #29d398

! yellow
*.color3:       #fac29a
*.color11:      #fac29a

! blue
*.color4:       #26bbd9
*.color12:      #26bbd9

! magenta
